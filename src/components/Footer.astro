---
import { getEntry } from "astro:content";

const entry = await getEntry("site", "footer");
const { Content } = await entry.render();
const year: number = new Date().getFullYear();
---

<footer class="Footer" data-layout-wide>
	<h2 data-sr>{entry.data.heading}</h2>
	<Content />
	<p><small>Copyright {year} {entry.data.copyright}</small></p>
</footer>

<style>
	.Footer {
		contain: content;
		content-visibility: auto;
		padding-block: var(--space-96) var(--space-112);
		contain-intrinsic-size: 0 300px;
		color: var(--color-text-on-surface);
		background-color: var(--color-surface);
		line-height: 1.3;
		letter-spacing: 0.06ch;
	}

	/* Legal Paragraph */
	.Footer p {
		margin-block-start: var(--gap);
		font-size: var(--font-size-small);
	}

	/* Paragraph in Content */
	.Footer :global(p) {
		font-size: var(--font-size-link);
	}
</style>
