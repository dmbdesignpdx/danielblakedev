---
import { Links, Section } from "../constants";
import Button from "../components/Button.astro";
---

<section class="root" data-layout>
	<h2 data-sr>{Section.INFO}</h2>
	{
		Links.Info.map((link) => (
			<Button label={link.LABEL} href={link.URL} icon={link.ICON} newTab />
		))
	}
</section>

<style>
	.root {
		contain: content;
		content-visibility: auto;
		display: flex;
		padding-block: 0 20vh;
		contain-intrinsic-size: 0 19rem;
		flex-flow: var(--flex-column);
		justify-content: space-between;
		gap: var(--gap);
	}
</style>
